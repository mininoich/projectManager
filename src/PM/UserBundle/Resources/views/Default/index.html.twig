{% extends 'PMUserBundle:Default:layout.html.twig' %}

{% block title %}
    Liste des utilisateurs
{% endblock %}

{% block userContent %}
    {% if users|length > 0 %}
        <table class="table table-hover table-responsive">
            <thead>
                <tr>
                    <th>Login</th>
                    <th>Email</th>
                    <th>Actif</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.enabled }}</td>
                        <td>
                            <a href="{{ path('pm_user_edit', {'id': user.id})}}" class="btn btn-default btn-xs">Modifier</a>
                            <a href="{{ path('pm_user_delete', {'id': user.id})}}" class="btn btn-danger btn-xs">Supprimer</a>
                        </td>
                    </tr> 
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        Il n'y a aucun utilisateur. 
    {% endif %}
{% endblock %}