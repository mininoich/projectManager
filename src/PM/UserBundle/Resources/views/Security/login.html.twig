{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" role="form" class="form-horizontal">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <div class="form-group">
        <label for="username" class="col-xs-12 col-sm-4 control-label">{{ 'security.login.username'|trans }}</label>
        <div class="col-xs-12 col-sm-8">
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-xs-12 col-sm-4 control-label">{{ 'security.login.password'|trans }}</label>
        <div class="col-xs-12 col-sm-8">
            <input type="password" id="password" name="_password" required="required" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-0 col-sm-4"></div>
        <div class="col-xs-12 col-sm-8">
            <div class="checkbox">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-0 col-sm-4"></div>
        <div class="col-xs-12 col-sm-8">
            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-default" />
        </div>
    </div>
</form>
{% endblock fos_user_content %}
