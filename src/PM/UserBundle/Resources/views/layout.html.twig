<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{% block title %}Project Manager - Login{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('bundles/communs/css/bootstrap.min.css') }}" type="text/css" media="all" />
        <!--<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />-->
    </head>
    <body>
        <div id="form_login" style="position: fixed; width: 100%; top: 50%; margin-top: -123px;">
            <div class="col-xs-1 col-sm-2 col-md-3"></div>
            <div class="well col-xs-10 col-sm-8 col-md-6">
                {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert flash-{{ type }}">
                        {{ message|trans({}, 'FOSUserBundle') }}
                    </div>
                {% endfor %}
                {% endfor %}

                {% block fos_user_content %}
                {% endblock fos_user_content %}
            </div>
            <div class="col-xs-1 col-sm-2 col-md-3"></div>
        </div>
        <script type="text/javascript" language="javascript" src="{{ asset('bundles/communs/js/jquery-1.10.2.min.js') }}"></script>
        <script type="text/javascript" language="javascript" src="{{ asset('bundles/communs/js/bootstrap.min.js') }}"></script>
    </body>
</html>
