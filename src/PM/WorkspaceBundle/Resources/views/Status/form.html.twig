{% extends 'PMWorkspaceBundle:Status:layout.html.twig' %}

{% block title %}
    {{ action == 'add' ? 'Ajouter' : 'Editer' }} un Statut
{% endblock %}

{% block statusContent %}
    <div class="row">
        <div class="col-md-8">
        <form method="POST" {{ form_enctype(form) }} class="form-horizontal" role="form">
            {{ form_errors(form) }}
            
            <div class="form-group">
                <label for="inputStatut" class="col-sm-2 control-label">Statut</label>
                <div class="col-sm-10">
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                          {{ form_errors(form.defaultValue) }}
                          {{ form_widget(form.defaultValue) }}
                            Par défaut
                        </label>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                          {{ form_errors(form.closed) }}
                          {{ form_widget(form.closed) }}
                            Terminé
                        </label>
                    </div>
                </div>
            </div>
            
             <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
              </div>
        {{ form_end(form) }}
    </div>
{% endblock %}