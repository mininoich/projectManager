{% extends 'PMWorkspaceBundle:Status:layout.html.twig' %}

{% block title %}
    {{ action == 'add' ? 'Ajouter' : 'Editer' }} un Statut
{% endblock %}

{% block statusContent %}
    <div class="row">
        <div class="col-md-8">
        <form method="POST" {{ form_enctype(form) }} class="form-horizontal" role="form">
            {{ form_errors(form) }}
            
            <div class="form-group">
                <label for="inputAction" class="col-sm-2 control-label">Action</label>
                <div class="col-sm-10">
                    {{ form_errors(form.action) }}
                    {{ form_widget(form.action, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            
            <div class="form-group">
                <label for="inputNom" class="col-sm-2 control-label">Nom</label>
                <div class="col-sm-10">
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            
            <div class="form-group">
                <label for="inputDefault" class="col-sm-2 control-label">Par d√©faut</label>
                <div class="col-sm-10">
                    {{ form_errors(form.defaultValue) }}
                    {{ form_widget(form.defaultValue, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

             <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
              </div>
        {{ form_end(form) }}
    </div>
{% endblock %}