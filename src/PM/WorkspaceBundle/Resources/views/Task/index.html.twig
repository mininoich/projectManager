{% extends 'PMWorkspaceBundle:Workspace:layout.html.twig' %}
{% block content %}
    <p>
        <a href="{{ path('pm_task_add', {'workspace_id': workspace.id })}}" class="btn btn-sm btn-success"><span class="glyphicon glyphicon-plus"></span> Ajouter une tâche</a>
        <a href="{{ path('pm_directory_add', {'workspace_id': workspace.id })}}" class="btn btn-sm btn-success"><span class="glyphicon glyphicon-folder-open"></span> Ajouter un dossier</a>
    </p>
    
    {% if tasks|length > 0 %}
        <table class="table table-hover table-responsive table-condensed">
            <thead>
                <tr>
                    <th>Statut</th>
                    <th>Sujet</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for t in tasks %}
                    <tr>
                        <td>{{ t.currentTaskStatus.status.name }}</td>
                        <td>{{ t.name }}</td>
                        <td>
                            <a href="{{ path('pm_task_edit', {'workspace_id': workspace.id, 'task_id': t.id})}}" ><span class="glyphicon glyphicon-edit"></span></a>
                            <a href="{{ path('pm_task_delete', {'workspace_id': workspace.id, 'task_id': t.id})}}" ><span class="glyphicon glyphicon-trash"></span></a>
                        </td>
                    </tr> 
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-warning">Il n'y a aucune tâche.</div> 
    {% endif %}
       
            <div id="testA"></div>
       
{% endblock %}
        
        {% block javascripts %}
        {{ parent() }}
        <script type="text/javascript">
            

		

		webix.ready(function(){
                       var data = [ 
                                    {
                                        "id":" ",
                                        "value":"Non classé",
                                        "data": [
                                                {% for t in freeTasks %}
                                                    {
                                                        "id":"{{t.id}}",
                                                        "value":"{{t.name}}"
                                                    }
                                                {% endfor %} 
                                                ]
                                    }
                                ];
                        
			grid = $("#testA").webix_treetable({
                            autoheight:true,
                            adjust:true,
				columns:[
					{ id:"id",	header:"", css:{"text-align":"right"}},
					{ id:"value",	header:"Tâche",
						template:"{common.treetable()} #value#",  fillspace:1,}
				],
				data: data
			});	
		});
		
		webix.event(window, "resize", function(){ grid.adjust(); })
        </script>
        {% endblock %}