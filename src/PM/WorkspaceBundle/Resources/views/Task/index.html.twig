{% extends 'PMWorkspaceBundle:Workspace:layout.html.twig' %}
{% block content %}
        <a href="{{ path('pm_task_add', {'workspace_id': workspace.id })}}" class="btn btn-success">Ajouter une tâche</a>
    
    {% if tasks|length > 0 %}
        <table class="table table-hover table-responsive table-condensed">
            <thead>
                <tr>
                    <th>Statut</th>
                    <th>Sujet</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for t in tasks %}
                    <tr>
                        <td>{{ t.currentTaskStatus.status.name }}</td>
                        <td>{{ t.name }}</td>
                        <td>
                            <a href="{{ path('pm_task_edit', {'workspace_id': workspace.id, 'task_id': t.id})}}" class="btn btn-default btn-xs">Modifier</a>
                            <a href="{{ path('pm_task_delete', {'workspace_id': workspace.id, 'task_id': t.id})}}" class="btn btn-danger btn-xs">Supprimer</a>
                        </td>
                    </tr> 
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-warning">Il n'y a aucune tâche.</div> 
    {% endif %}
{% endblock %}