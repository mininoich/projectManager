{% extends 'PMWorkspaceBundle:Workspace:layout.html.twig' %}
{% block content %}
{% for s in status %}
    <div class="col-md-4" >
  <div class="panel panel-primary">
  <div class="panel-heading" >{{ s.name}}</div>
  <div style="height:250px; overflow:auto;">
  <table class="table table-hover table-responsive table-condensed ">
            <thead>
                <tr>
                    <th>Sujet</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody >
                {% set nb = 0 %}
                {% for ts in s.taskStatus %}
                    {% if ts.lastStatus %}
                    {% set nb = nb + 1 %}
                    <tr>
                        <td style="font-size:0.8em; line-height:1.5em;">{{ ts.task.name }}</td>
                        <td class="text-right">
                            <a href="{{ path('pm_task_edit', {'workspace_id': workspace.id, 'task_id': ts.task.id})}}"><img src=" {{ asset('img/pencil.png') }} "></a>
                            <a href="{{ path('pm_task_delete', {'workspace_id': workspace.id, 'task_id': ts.task.id})}}"><img src=" {{ asset('img/delete.png') }} "></a>
                        </td>
                    </tr> 
                    {% endif %}
                {% endfor %}
                {% if nb == 0 %}
                    <tr><td colspan="2" class="text-center">-</td></tr>
                {% endif %}
            </tbody>
        </table>
  </div>
</div>
    </div>
{% endfor %}

<div id="widget" style="background-color:#003399; width:100px; height:100px;"></div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
    $('#widget').draggable();
{% endblock %}
        
