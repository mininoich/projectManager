{% extends 'PMWorkspaceBundle:Workspace:layout.html.twig' %}

{% block title %}
    Ajouter un dossier
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-8">
        <form method="POST" {{ form_enctype(form) }} class="form-horizontal" role="form">
            {{ form_errors(form) }}
            <div class="row top-buffer">
                    <label for="pm_workspacebundle_directory_name" class="col-sm-2 control-label">Nom</label>
                    <div class="col-sm-10">
                        {{ form_errors(form.name) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
            </div>
            <div class="row top-buffer">
                <label for="pm_workspacebundle_directory_parent" class="col-sm-2 control-label">Dossier Parent</label>
                <div class="col-sm-10">
                    {{ form_errors(form.parent) }}
                    {{ form_widget(form.parent, {'attr': {'class': 'form-control select_dossier_parent'}}) }}
                </div>
            </div>
             <div class="row top-buffer">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
              </div>
        {{ form_end(form) }}
    </div>
        
        <span class="add-on"><i class="icon-calendar"></i></span>
{% endblock %}
        
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('.select_dossier_parent').select2({
            placeholder: "Aucun",
            allowClear: true
        });
    </script>
{% endblock %}